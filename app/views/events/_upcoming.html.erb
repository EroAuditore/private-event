<% @upcoming.each do | event | %>
    <div class="box">
        <article class="media">
           
            <div class="media-content">
                <div class="content">
                    <p>
                        <strong>Organizer</strong> <br> <%= event.user.email %>
                    </p>
                    <p>
                        <strong>Description</strong> <br> <%= event.description %>
                    </p>
                    <p>
                        <strong>Event Date</strong> <br> <%= event.event_date %>
                    </p>
                </div>
          
                <nav class="level">
                    <div class="level-left is-mobile">
                        <%= link_to event, class: "level-item" do %>
                          <span class="icon"><i class="fa fa-address-book" aria-hidden="true"></i></span>
                        <% end %>
                        <%= link_to edit_event_path(event), class: "level-item" do %>
                          <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                        <% end %>
                        <%= link_to event, method: :delete, data: { confirm: "Are you sure you want to delete this post?" } do %>
                            <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                        <% end %>
                    </div>
                </nav>
          
            </div>
        </article>
    </div>
  <% end %>
  